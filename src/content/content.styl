.CRX-content
    .content-entry
        position: fixed
        bottom: 20px
        right: 20px
        width: 50px
        height: 50px
        background: url('images/icon.png')
        background-size: 100% 100%
        cursor: pointer
.popup
    border: 1px solid #DEDEDE;
    background: #DEDEDE;
    border-radius: 2px;
    position: fixed;
    width: 50px;
    height: 30px;
    display: none;
    align-items: center;
    justify-content: center;
    &:hover
        display: flex !important;
    &.show
        display: flex;
.collection
    color: #2222EE;
    cursor: pointer;
    &:hover
        opacity: 0.7;
    &:active
        opacity: 1;